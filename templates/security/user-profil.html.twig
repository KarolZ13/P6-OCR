{% extends 'base.html.twig' %}

{% block title %}Modification de son profil | SnowTricks{% endblock %}

{% block body %}
<section class="py-4">
    <div class="container px-4 my-4 text-center wrap">
        <form class="text-center">
            <h1 class="h3 mb-5 font-weight-normal">Modifier son profil</h1>
            <div class="mb-5 mx-5">
                <label for="username" class="form-label">Nom d'utilisateur :</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-5 mx-5">
                <label for="email" class="form-label">Adresse mail :</label>
                <input type="text" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-5 mx-5">
                <label for="password" class="form-label">Mot de passe :</label>
                <input type="text" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-5 mx-5">
                <label for="avatar" class="form-label">Avatar :</label>
                <input type="file" class="form-control" id="avatar" name="avatar" multiple>
            </div>
            <button type="submit" class="btn btn-primary">Soumettre</button>
        </form>
    </div>
</section>
{% endblock %}