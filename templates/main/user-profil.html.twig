{% extends 'base.html.twig' %}

{% block title %}Modification du profil | SnowTricks{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: center; min-height: 100vh">
        <div class="wrap py-4 bg-white overflow-hidden col-12 col-md-8 col-lg-6 col-xl-4">
            {{ form_start(form) }}
            <h1 class="h3 mb-3 font-weight-normal">Modifier son profil</h1>
            <div class="mb-4">
            {{ form_row(form.email) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.username) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.plainPassword) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.avatar) }}
            </div>
            <div class="inscription mt-4">
                {{ form_widget(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
