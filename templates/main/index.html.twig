{% extends 'base.html.twig' %}

{% block title %}Accueil | SnowTricks{% endblock %}

{% block body %}
{% for flashMessage in app.flashes('success') %}
    <div class="alert1 alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
<header class="bg-black py-2">
    <span id="nav"></span>
    <div class="image" style="position: relative;">
        <div class="booticon">
            <a href="#tricks">
                <i class="bi bi-arrow-down-circle-fill bi-icon"></i>
            </a>
        </div>
        <h1>SnowTricks</br>Le site communautaire qui regroupe</br>tous les tricks du snowboard</h1>
    </div>
</header>
<section class="py-5">
    <span id="tricks"></span>
    <div class="container px-5 my-5">
        <div style="display: flex; justify-content: center; align-items: center; min-height: 100vh">
            <div class="wrap" style="display: flex; flex-direction: column; align-items: center;">
                <div class="row gx-5" id="more-articles">
                    {% for trick in tricks %}
                    <div class="col-lg-3 mb-5">
                        <div class="card h-100 shadow border-0">
                            <a class="text-decoration-none link-dark" href="{{ path('app_details_trick', {'slug': trick.slug}) }}">
                            {% if trick.picture|length > 0 %}
                                <img class="card-img-top" src="{{ asset('assets/img/' ~ trick.picture.first.name) }}" alt="..." />
                            {% else %}
                                <img class="card-img-top" src="https://dummyimage.com/600x350/ced4da/6c757d" alt="..." />
                            {% endif %}
                            </a>
                            <div class="card-body p-4">
                                <div class="cat badge bg-secondary bg-gradient rounded-pill mb-4">{{ trick.categories.name }}</div>
                                    <div class="division">
                                        <div class="block1">
                                            <h5 class="card-title1 mb-3">
                                                {{ trick.title }}
                                            </h5>
                                        </div>
                                        <div class="block2">
                                            {% if app.user %}
                                                <a href="{{ path('app_edit_trick', {'slug': trick.slug}) }}">
                                                    <button class="btn btn-secondary">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                                        </svg>
                                                    </button>
                                                </a>
                                                <a href="{{ path('app_delete_trick', {'slug': trick.slug}) }}">
                                                    <button class="btn btn-dark">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                                        </svg>
                                                    </button>
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="icon-container">
                    <a href="#more-articles" id="show-more-link"><i class="bi bi-plus-square-fill"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="icon-bottom">
    <a href="#nav">
        <i class="bi bi-arrow-up-circle-fill"></i>
    </a>
</div>
{% endblock %}
