{% extends 'base.html.twig' %}

{% block title %}Inscription | SnowTricks{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div style="display: flex; justify-content: center; align-items: center; min-height: 100vh">
    <div class="wrap py-4 bg-aliceblue overflow-hidden col-12 col-md-8 col-lg-6 col-xl-4">
        <div class="inscription">
            <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
        </div>
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <fieldset>
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.avatar) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}
            </fieldset>

            <button type="submit" class="btn btn-primary my-3">Inscription</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
